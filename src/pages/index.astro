---
import Layout from "../layouts/Layout.astro";
import CVTimeline from "../components/CVTimeline.astro";
import Skills from "../components/Skills.astro";
---

<Layout title="Sven Ligensa | Explainable AI">
  <main
    class="flex flex-col justify-center items-center min-h-screen px-4 text-center relative overflow-hidden"
  >
    <div class="z-10 max-w-3xl space-y-8">
      <!-- The Hook -->
      <h1 class="font-mono text-4xl md:text-6xl font-bold tracking-tight">
        Hey, I'm <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-indigo-400"
          >Sven<span class="animate-pulse text-teal-400">_</span></span
        >
      </h1>

      <!-- The Sub-hook -->
      <p
        class="text-lg md:text-xl text-slate-400 leading-relaxed max-w-3xl mx-auto"
      >
        PhD Student @ <a
          href="https://mlde-lab.github.io/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-teal-400 hover:text-teal-300 transition-colors"
          >MLDE group</a
        > at University of MÃ¼nster
        <br />
        Working on <span class="text-slate-200 font-medium">Explainable AI</span
        > to make powerful Deep Learning models more transparent.
      </p>

      <!-- The CTA Buttons -->
      <div class="flex flex-wrap gap-4 justify-center pt-4">
        <!-- Primary Button -->
        <div
          class="px-8 py-3 rounded-lg bg-teal-600 hover:bg-teal-500 text-white font-semibold transition-all shadow-[0_0_20px_rgba(20,184,166,0.3)] hover:shadow-[0_0_30px_rgba(20,184,166,0.5)] cursor-not-allowed"
          title="Coming Soon"
        >
          Read my Papers
        </div>

        <!-- <a
          href="#papers"
          class="px-8 py-3 rounded-lg bg-teal-600 hover:bg-teal-500 text-white font-semibold transition-all shadow-[0_0_20px_rgba(20,184,166,0.3)] hover:shadow-[0_0_30px_rgba(20,184,166,0.5)]"
        >
          Read my Papers
        </a> -->

        <!-- Secondary Button (Outline) -->
        <a
          href="/cv.pdf"
          download="Ligensa_CV.pdf"
          class="inline-flex items-center gap-2 px-8 py-3 rounded-lg border border-slate-700 hover:border-slate-500 text-slate-300 hover:text-white transition-all bg-slate-900/50 backdrop-blur-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
            ></path>
          </svg>
          Download CV
        </a>
      </div>
    </div>
  </main>
</Layout>

<!-- Animated Down Arrow -->
<button
  id="scroll-down-btn"
  class="absolute bottom-30 left-1/2 -translate-x-1/2 z-20 text-slate-400 hover:text-teal-400 transition-colors cursor-pointer animate-bounce"
  aria-label="Scroll to CV section"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-8 w-8"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
  </svg>
</button>

<script>
  const scrollBtn = document.getElementById("scroll-down-btn");
  const cvSection = document.getElementById("skills-section");

  scrollBtn?.addEventListener("click", () => {
    cvSection?.scrollIntoView({ behavior: "smooth" });
  });
</script>

<section id="skills-section" class="py-20 bg-slate-950">
  <Skills />
</section>

<section id="cv-section" class="py-20 bg-slate-950">
  <CVTimeline />
</section>

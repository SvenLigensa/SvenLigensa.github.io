---
const skills = [
    {
        name: "Python",
        icon: "https://cdn.simpleicons.org/python/3776AB",
    },
    {
        name: "PyTorch",
        icon: "https://cdn.simpleicons.org/pytorch/EE4C2C",
    },
    {
        name: "ApacheSpark",
        displayName: "PySpark",
        icon: "https://cdn.simpleicons.org/apachespark/E25A1C",
    },
    {
        name: "GitHub",
        icon: "https://cdn.simpleicons.org/github/white",
    },
    {
        name: "Linux",
        icon: "https://cdn.simpleicons.org/linux/FCC624",
    },
    {
        name: "LaTeX",
        icon: "https://cdn.simpleicons.org/latex/008080",
    },
];

const interests = ["Explainable AI", "Computer Vision", "Transformers"];
---

<div class="relative w-full max-w-6xl mx-auto p-4 md:p-10">
    <!-- Skills Section -->
    <div class="mb-16">
        <h2 class="text-3xl font-mono font-bold text-center mb-8">
            <span class="text-teal-400">./</span>skills
        </h2>
        <div class="flex flex-wrap justify-center gap-3 md:gap-4">
            {
                skills.map((skill) => (
                    <div class="group min-w-[120px] min-h-[60px] rounded-lg bg-slate-900/50 border border-slate-700/50 backdrop-blur-sm hover:border-teal-500/50 hover:bg-slate-800/50 transition-all duration-300 hover:scale-105 hover:shadow-[0_0_20px_rgba(20,184,166,0.2)] flex items-center justify-center gap-3 px-4">
                        <img
                            src={skill.icon}
                            alt={skill.displayName || skill.name}
                            class="h-5 w-5 opacity-70 group-hover:opacity-100 transition-opacity flex-shrink-0"
                        />
                        <span class="text-slate-200 font-medium group-hover:text-teal-400 transition-colors">
                            {skill.displayName || skill.name}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>

    <!-- Interests Section -->
    <div>
        <h2 class="text-3xl font-mono font-bold text-center mb-8">
            <span class="text-teal-400">./</span>interests
        </h2>
        <div class="flex flex-wrap justify-center gap-3 md:gap-4">
            {
                interests.map((interest) => (
                    <div class="group min-w-[240px] min-h-[60px] rounded-lg bg-slate-900/50 border border-slate-700/50 backdrop-blur-sm hover:border-teal-500/50 hover:bg-slate-800/50 transition-all duration-300 hover:scale-105 hover:shadow-[0_0_20px_rgba(20,184,166,0.2)] flex items-center justify-center">
                        <span class="text-slate-200 font-medium group-hover:text-teal-400 transition-colors">
                            {interest}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>
</div>
